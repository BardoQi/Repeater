<?xml version="1.0" encoding="utf-8"?>
<com.weishang.repeater.widget.DivideLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    auto:divier_gravity="bottom"
    auto:divier_color="@color/dark_gray"
    auto:divier_padding="5dp"
    android:background="@drawable/gray_item_selector">

    <TextView
        android:id="@+id/tv_repeat_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_repeat_record"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_sidebar_singer" />

    <RelativeLayout
        android:layout_width="@dimen/abc_action_bar_default_height"
        android:layout_height="@dimen/abc_action_bar_default_height">

        <ImageView
            android:id="@+id/iv_repeat_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mz_ic_popup_delete" />

        <com.weishang.repeater.widget.ClockWheelView
            android:id="@+id/cv_wheel_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>

</com.weishang.repeater.widget.DivideLinearLayout>